@page
@model LearningAboutTheIdentityClass.Pages.Login.IndexModel
@{
    ViewData["Title"] = "Login";
}

<h2 class="text-primary mt-3">
    Login
</h2>
<hr />
<form method="post">
    <div class="row form-group">
        <label asp-for="UserLogin.Email" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <input asp-for="UserLogin.Email" class="form-control" placeholder="Email..." />
            <span asp-validation-for="UserLogin.Email" class="text-danger"></span>
        </div>

    </div>
    <div class="row form-group">
        <label asp-for="UserLogin.Password" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <input asp-for="UserLogin.Password" class="form-control" placeholder="Password..." />
            <span asp-validation-for="UserLogin.Password" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group">
        <div class="checkbox">
            <label asp-for="UserLogin.RememberMe">
                <input asp-for="UserLogin.RememberMe">
                @Html.DisplayNameFor(x => x.UserLogin.RememberMe)
            </label>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-outline-success">Log in</button>
            <a asp-page="/Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </div>

</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}