@page
@model LearningAboutTheIdentityClass.Pages.Login.IndexModel
@{
    ViewData["Title"] = "Login";
}
<div class="alert alert-info alert-dismissible mt-2">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    Login User
</div>
<h2 class="text-info">
    User Login
</h2>
<hr />
<form method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row form-group">
        <label asp-for="@Model.UserLogin.Email" class="col-md-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.UserLogin.Email" class="form-control" placeholder="Email..." />
            <span asp-validation-for="@Model.UserLogin.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <label asp-for="@Model.UserLogin.Password" class="col-md-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.UserLogin.Password" class="form-control" placeholder="Password..." />
            <span asp-validation-for="@Model.UserLogin.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="checkbox">
            <label asp-for="@Model.UserLogin.RememberMe" class="ml-3">
                <input asp-for="@Model.UserLogin.RememberMe">
                @Html.DisplayNameFor(x => x.UserLogin.RememberMe)
            </label>

        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-10 mb-2">
            <button type="submit" class="btn btn-outline-success">Login</button>
            <a asp-page="/Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>
    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
</form>